% Template stylisé pour la section Situation Administrative de l'Entreprise
% TEMPLATE JINJA2 - Les variables sont remplacées dynamiquement
{% set couleur = situation_admin_couleur if situation_admin_couleur is defined else 'ecoBleu' %}

\vspace{0.3cm}

% Qualifications RGE QUALIBAT
\begin{tcolorbox}[
    enhanced,
    colback=white,
    colframe={{ couleur }},
    fonttitle=\bfseries\large,
    coltitle=white,
    title={\faIcon{award}\hspace{0.3em}Qualifications entreprise RGE QUALIBAT},
    colbacktitle={{ couleur }},
    rounded corners,
    boxrule=2pt,
    left=12pt, right=12pt, top=10pt, bottom=10pt
]

\begin{itemize}[leftmargin=1.5em, itemsep=4pt]
{% for qualif in situation_admin.qualifications %}
    \item[\textcolor{{ '{' }}{{ couleur }}{{ '}' }}{\faIcon{check-circle}}] {{ qualif | escape_latex }}
{% endfor %}
\end{itemize}

\end{tcolorbox}

\vspace{0.5cm}

% Effectif sur toute la largeur
\begin{tcolorbox}[
    enhanced,
    colback=white,
    colframe={{ couleur }},
    fonttitle=\bfseries,
    coltitle=white,
    title={\faIcon{users}\hspace{0.3em}Effectif au {{ situation_admin.effectif_date }}},
    colbacktitle={{ couleur }},
    rounded corners,
    boxrule=1.5pt,
    halign=center,
    left=10pt, right=10pt, top=8pt, bottom=8pt
]

\vspace{0.3cm}
{\Huge\bfseries\textcolor{{ '{' }}{{ couleur }}{{ '}' }}{ {{ situation_admin.effectif_nombre }} }}
\hspace{1cm}
{\large salariés }
\vspace{0.3cm}

\end{tcolorbox}

\vspace{0.5cm}

% Chiffre d'affaires sur toute la largeur
\begin{tcolorbox}[
    enhanced,
    colback=white,
    colframe={{ couleur }},
    fonttitle=\bfseries,
    coltitle=white,
    title={\faIcon{chart-line}\hspace{0.3em}Chiffre d'affaires},
    colbacktitle={{ couleur }},
    rounded corners,
    boxrule=1.5pt,
    left=10pt, right=10pt, top=8pt, bottom=8pt
]

\vspace{0.3cm}
\centering
\renewcommand{\arraystretch}{1.6}
\begin{tabular}{@{}{% for ca in situation_admin.chiffre_affaires %}c{% if not loop.last %} {% endif %}{% endfor %}@{}}
{% for ca in situation_admin.chiffre_affaires %}    \textbf{ {{ ca.annee }} }{% if not loop.last %} & {% endif %}{% endfor %} \\
{% for ca in situation_admin.chiffre_affaires %}    {{ ca.montant }}{% if not loop.last %} & {% endif %}{% endfor %} \\
\end{tabular}

\vspace{0.3cm}
{\small\textcolor{ecoVert}{ \faIcon{arrow-up} {{ situation_admin.tendance_ca | escape_latex }} }}

\end{tcolorbox}
