    enhanced,
    breakable,
    colback=traitBleuClair,
    colframe=traitBleu,
    fonttitle=\bfseries\large,
    coltitle=white,
    title={\faIcon{spray-can}\hspace{0.3em}{{title}}},
    colbacktitle=traitBleu,
    rounded corners,
    boxrule=2pt,
    left=10pt, right=10pt, top=10pt, bottom=10pt
]

